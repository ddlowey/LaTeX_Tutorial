		\begin{flushleft} 
		
			For horizontal spacing some of the more widely spread commands include:
			
			\begin{itemize}
				\setlength\itemsep{0em}
					\item <empty space> \hspace{6mm} (inserts a standard horizontal space)
					\item \textit{\textbackslash enspace} \hspace{17mm} (inserts a horizontal space of 0.5em)
					\item \textit{\textbackslash quad} \hspace{22.75mm} (inserts a horizontal space of 1em; can be stacked)
					\item \textit{\textbackslash qquad} \hspace{20.25mm} (inserts a horizontal space of 2em; same as 
						\textit{\textbackslash quad \textbackslash quad})					
					\item \textit{\textbackslash hskip<len>} \hspace{12.75mm} (inserts a space of specified length; can be negative)
					\item \textit{\textbackslash hspace\{<len>\}} \hspace{7mm} (inserts a space of specified length + 1 standard space; 
					
						\hspace{3.45cm} can be negative)	
					\item \textit{\textbackslash hfill} \hspace{25.5mm} (inserts rubber space that stretches acc. to available space)									\end{itemize}

		\end{flushleft}				

