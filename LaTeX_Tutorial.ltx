						\item \textbf{\textit{flushleft}} (left aligns the text)
						\item \textbf{\textit{center}} (centres the text)
						\item \textbf{\textit{flushright}} (right aligns the text)
					\end{itemize}					
					
				\item Enumerations/Lists
										
					\begin{itemize}					
						\item \textbf{\textit{itemize}} (creates a list with bullet points)
						\item \textbf{\textit{enumerate}} (creates a list with numbers)
						\item \textbf{\textit{description}} (creates an unmarked list of a bold and normal element)
					\end{itemize}					

				\item Graphics
										
					\begin{itemize}					
						\item \textbf{\textit{figure}} (allows for embedding of graphical elements such as images)
						\item \textbf{\textit{tabular}} (creates a table)
					\end{itemize}					

				\item Others
										
					\begin{itemize}					
						\item \textbf{\textit{document}} (creates the main body of the document)
						\item \textbf{\textit{verbatim}} (displays the source text without being interpreted)
					\end{itemize}					

			\end{itemize}	
												
		\end{flushleft} 

