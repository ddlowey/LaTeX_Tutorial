						{[}options\textcolor{DarkGreen}{]} 

					\hspace{5mm} \textcolor{blue!30}{\textbackslash begin}\textcolor{DarkGreen!30}{\{}\textcolor{
						black!30}{environment2}\textcolor{DarkGreen!30}{\}}\textcolor{
						DarkGreen!30}{[}\textcolor{black!30}{options}\textcolor{DarkGreen!30}{]} 
			
					\hspace{10mm} ... 

					\hspace{5mm} \textcolor{blue!30}{\textbackslash end}\textcolor{DarkGreen!30}{\{}\textcolor{black!30}{environment2}\textcolor{
						DarkGreen!30}{\}}
						
					\textcolor{blue}{\textbackslash end}\textcolor{DarkGreen}{\{}environment1\textcolor{DarkGreen}{\}}

				\end{mdframed}				
			\end{minipage}	
			
